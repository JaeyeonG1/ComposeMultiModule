<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Tambi.Splash" parent="Theme.SplashScreen">
        <!-- Splash Screen Theme -->
        <item name="windowSplashScreenBackground">@color/dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_animated_splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenBehavior" tools:targetApi="33">icon_preferred</item>
        <item name="postSplashScreenTheme">@style/Theme.Tambi</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark</item>
        <item name="android:navigationBarColor">@color/dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
